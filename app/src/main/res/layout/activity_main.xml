<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.amar97march.javameetui.MainActivity"
    android:background="@drawable/android1">

    <Button
        android:text="add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtValue"
        android:layout_alignParentStart="true"
        android:layout_marginTop="84dp"
        android:id="@+id/btnAdd"
        android:background="@android:drawable/checkbox_off_background" />

    <Button
        android:text="take"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnAdd"
        android:layout_alignParentEnd="true"
        android:id="@+id/btnTake"
        android:background="@android:drawable/checkbox_off_background" />

    <Button
        android:text="grow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAdd"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:id="@+id/btnGrow"
        android:background="@android:drawable/checkbox_off_background"
        android:textSize="14sp" />

    <Button
        android:text="Hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGrow"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp"
        android:id="@+id/btnHide"
        android:background="@android:drawable/checkbox_off_background" />

    <Button
        android:text="shrink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnGrow"
        android:layout_alignStart="@+id/btnTake"
        android:id="@+id/btnShrink"
        android:background="@android:drawable/checkbox_off_background" />

    <Button
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnHide"
        android:layout_alignStart="@+id/btnShrink"
        android:id="@+id/btnReset"
        android:background="@android:drawable/checkbox_off_background" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtValue"
        android:background="?attr/colorPrimary"
        android:textSize="36sp"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/txtGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:text="Get The Number 7 (0-9)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtGame"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="--"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="36sp"
        android:layout_below="@+id/txtGame"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="--"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/txtValue"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:text="Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtResult"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnCheck" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCheck"
        android:background="@android:drawable/ic_menu_slideshow"
        android:layout_alignBaseline="@+id/btnHide"
        android:layout_alignBottom="@+id/btnHide"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_below="@+id/btnHide"
        android:layout_alignEnd="@+id/btnHide"
        android:layout_marginEnd="31dp" />

</RelativeLayout>
